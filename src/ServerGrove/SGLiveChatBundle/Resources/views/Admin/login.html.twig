{% extends "SGLiveChatBundle::layout.html.twig" %}
{% block content %}
<form action="{{ path('_security_check') }}" method="post">
    <div style="padding-left: 30px;padding-right: 30px;">
        <h3>Please enter your e-mail and password to access the admin panel</h3>
        <div>
            {{ form_start(form) }}
        </div>
        <div class="inputname">
            e-mail
        </div>
        <div class="inputbox">
            {{ form_row(form.email) }}
        </div>
        <p>
        </p>
        <div class="inputname">
            Password
        </div>
        <div class="inputbox">
            {{ form_row(form.passwd) }}
        </div>
        <p>
            {{ form_end(form) }}
        </p>
        <input type="submit" value="Login" />
    </div>
</form>
<script type="text/javascript">
    jQuery(document).ready(function(){
        jQuery(':text').focus();
    });
</script>
{% endblock %}